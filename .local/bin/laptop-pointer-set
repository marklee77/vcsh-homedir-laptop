#!/bin/bash
scriptname="$(basename "${BASH_SOURCE[0]}")"
rundir="${XDG_RUNTIME_DIR:-${HOME}/.local/var/run}/${scriptname}"
pidfile="${rundir}/PID"
cleanup () {
    rm -f "${pidfile}"
    flock -u 200
}
mkdir -p "${rundir}"
exec 200>"${pidfile}"
if ! flock -n 200 || ! echo "$$" > "${pidfile}"; then
    echo "another instance of the ${scriptname} is currently running..." >&2
    exit 1
fi
trap cleanup EXIT HUP INT QUIT TERM

inputs=($(xinput | grep -v XTEST | perl -ne 'print "$1\n" if /id=(\d+).*slave\s+pointer/' | sort -n))
if [ "${#inputs[@]}" -lt 1 ]; then
    exit 0
fi

if [ "$1" == "on" ]; then
    subcommand="enable"
elif [ "$1" == "off" ]; then
    subcommand="disable"
else
    state=$(xinput list-props ${inputs[0]} | perl -ne 'print $1 if /Device Enabled .*:\s*(\d+)/')
    if [ "$state" = 1 ]; then
        subcommand="disable"
    else
        subcommand="enable"
    fi
fi

if [ -n "$subcommand" ]; then
    for input in ${inputs[@]}; do
        xinput $subcommand $input
    done
fi
