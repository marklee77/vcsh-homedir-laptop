#!/bin/bash

scriptname="$(basename $0)"

logfile="${HOME}/.local/var/log/${scriptname}.log"
exec 1>>${logfile}
exec 2>&1

rundir="${HOME}/.local/var/run/${scriptname}"
mkdir -p ${rundir}
if [ -f ${rundir}/confirm ]; then
    laptop-hibernate
else
    touch ${rundir}/confirm
    sleep 10
    rm ${rundir}/confirm
fi

exit 0
